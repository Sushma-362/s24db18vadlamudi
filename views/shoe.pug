extends layout

block content
  h1= title
  - let items = results
  div(class="container-fluid")
    - let x = `dispatch(\"/shoe/create\")`
    button.btn( class="btn-primary ml-1", onclick= x) create
    div(class="row m-1")
      each item in items
        - let destination = `dispatch(\"/shoe/update?id=${item._id}\")`
        - let arrival = `dispatch(\"/shoe/delete?id=${item._id}\")`
        - let route = `dispatch(\"/shoe/detail?id=${item._id}\")`
        div(class="row-sm-2", class="m-1") Item #{item.shoe_type}(#{item.shoe_brand}) is #{item.cost}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-primary ml-1", onclick= arrival) delete
        button.btn( class="btn-primary ml-1", onclick= route) detail
  script.
    function dispatch(path){
      window.location.href=path
      }